		{
			"name": "Get All Authors",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Status code is 200",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// 2. Response is JSON",
							"pm.test(\"Response is JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"// 3. Response is an array",
							"pm.test(\"Response is an array\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"});",
							"",
							"// 4. Each author object has required fields",
							"pm.test(\"Each author has id, idBook, firstName, lastName\", function () {",
							"    const jsonData = pm.response.json();",
							"    jsonData.forEach(author => {",
							"        pm.expect(author).to.have.property('id');",
							"        pm.expect(author).to.have.property('idBook');",
							"        pm.expect(author).to.have.property('firstName');",
							"        pm.expect(author).to.have.property('lastName');",
							"    });",
							"});",
							"",
							"// 5. Check that all ids are unique",
							"pm.test(\"Author IDs are unique\", function () {",
							"    const jsonData = pm.response.json();",
							"    const ids = jsonData.map(author => author.id);",
							"    const uniqueIds = [...new Set(ids)];",
							"    pm.expect(ids.length).to.eql(uniqueIds.length);",
							"});",
							"",
							"// 6. Optional: Check that firstName and lastName are not empty",
							"pm.test(\"First and last names are not empty\", function () {",
							"    const jsonData = pm.response.json();",
							"    jsonData.forEach(author => {",
							"        pm.expect(author.firstName).to.not.be.empty;",
							"        pm.expect(author.lastName).to.not.be.empty;",
							"    });",
							"});",
							""
						],
