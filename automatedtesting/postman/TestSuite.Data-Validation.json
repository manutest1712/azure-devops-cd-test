			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"// 2. Parse response as JSON",
							"var jsonData = pm.response.json();",
							"",
							"// 3. Validate the returned firstName and lastName match the request",
							"pm.test(\"First name matches\", function () {",
							"    pm.expect(jsonData.firstName).to.eql(pm.environment.get(\"firstName\"));",
							"});",
							"",
							"pm.test(\"Last name matches\", function () {",
							"    pm.expect(jsonData.lastName).to.eql(pm.environment.get(\"lastName\"));",
							"});",
							"",
							"// 4. Validate that id is returned and is numeric",
							"pm.test(\"ID is returned and numeric\", function () {",
							"    pm.expect(jsonData.id).to.be.a(\"number\");",
							"    pm.expect(jsonData.id).to.be.above(-1); // Ensure non-negative",
							"});",
							"",
							"// 5. (Optional) Save the ID to environment for future requests",
							"pm.environment.set(\"id\", jsonData.id);"
						],
